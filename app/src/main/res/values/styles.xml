<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarColor">@color/navigationBackground</item>
        <item name="android:navigationBarDividerColor">@color/navigationDivider</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditorTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarColor">@color/navigationBackground</item>
        <item name="android:navigationBarDividerColor">@color/navigationDivider</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="MarkdownH1">
        <item name="android:textSize">52sp</item>
    </style>

    <style name="MarkdownH2">
        <item name="android:textSize">40sp</item>
    </style>

    <style name="MarkdownH3">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="MarkdownH4">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="MarkdownHx" />


    <style name="MarkdownTag">
        <item name="android:textSize">12sp</item>
        <item name="android:color">@android:color/secondary_text_light</item>
    </style>
</resources>
